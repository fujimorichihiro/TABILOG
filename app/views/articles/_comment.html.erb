<% article.comments.each do |comment| %>
  <div class="row">
    <div class="col-1"></div>
    <div class="col-8">
      <div class="row border-bottom border-lite">
        <div class="col-2 pt-2">
          <%= link_to user_path(comment.user) do %>
            <%= attachment_image_tag comment.user, :profile_image, :fill, 60, 60, class: "rounded-circle"%>
          <% end %>
        </div>
        <div class="col-10 pt-3">
          <p class="text-secondary">@<%= comment.user.name %></p>
          <%= comment.body %>
          <div class="row">
            <div class="col-7"></div>
            <div class="col-5 text-right">
              <%= comment.created_at.to_s(:datetime_jp)%>
            </div>
          </div>
        </div>
      </div>
    </div>
    <div class="col-3"></div>
  </div>
<% end %>