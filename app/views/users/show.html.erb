<div class="row mt-3">
  <div class="col-2">
    <%= attachment_image_tag @user, :profile_image, :fill, 100, 100, class: "rounded-circle" %>
  </div>
  <div class="col-10"></div>
</div>
<div class="row pt-2 pb-2">
  <div class="col-3">
    <h3><%= @user.name %></h3>
  </div>
  <div class="col-5"></div>
  <div class="col-4">
    <div class="btn btn-danger">follow</div>
    <div class="btn btn-danger rounded-circle"><i class="fas fa-envelope text-white"></i></div>
    <% if @user == current_user %>
      <%= link_to edit_user_path(@user) do %>
        <div class="btn btn-secondary rounded-circle"><i class="fas fa-cog"></i></div>
      <% end %>
    <% end %>
  </div>
</div>
<div class="row">
  <%= @user.introduction %>
</div>
