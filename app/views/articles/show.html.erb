<%= render :partial => "users/profile", :locals => {:user => @article.user} %>
<!-- ---------------記事詳細部分-------------------- -->
<!-- 記事タイトル -->
<div class="row mt-2">
  <div class="col-1"></div>
  <div class="col-8">
    <h1><%= @article.title %></h1>
  </div>
  <div class="col-3">
    <%= link_to edit_article_path do %>
      <div class="btn btn-success">編集する</div>
    <% end %>
    <%= link_to article_path(@article), method: :delete do %>
      <div class="btn btn-danger">削除</div>
    <% end %>
  </div>
</div>
<!-- 記事本文 -->
<div class="row mt-3">
  <div class="col-1"></div>
  <div class="col-10">
    <p>
      <%== @article.body %>
    </p>
  </div>
  <div class="col-1"></div>
</div>
<!-- 位置情報、googlemaps-API -->
<div class="row mt-3">
  <div class="col-1"></div>
  <div class="col-7">
    <a class="text-secondary" data-toggle="collapse" href="#Googlemaps-API" role="button" aria-expanded="false" aria-controls="Googlemaps-API">
      <i class="fas fa-map-marker-alt"></i> <%= @article.address %>
    </a>
    <div class="collapse" id="Googlemaps-API">
      <div class="card card-body">
        <div id="map"></div>
      </div>
    </div>
  </div>
  <div class="col-4">
    <%= @article.created_at.to_s(:datetime_jp) %>
  </div>
</div>
<!-- ----------------------------------------------- -->
<!-- コメント部分 -->
<% @article.comments.each do |comment| %>
  <div class="row border border-lite">
    <div class="col-1 pt-2">
      <%= link_to user_path(comment.user) do %>
        <%= attachment_image_tag comment.user, :profile_image, :fill, 60, 60, class: "rounded-circle"%>
      <% end %>
    </div>
    <div class="col-8">
      <div class="row" style="height: 20px;"></div>
        <p class="text-secondary">@<%= comment.user.name %></p>
        <%= comment.body %>
      <div class="row">
        <div class="col-9"></div>
        <div class="col-3">
          <%= comment.created_at.to_s(:datetime_jp)%>
        </div>
      </div>
    </div>
  </div>
<% end %>

<div class="row mt-3">
  <div class="col-1"></div>
  <div class="col-8">
    <%= form_for [@article, @comment] do |f| %>
      <%= f.text_area :body, class: "form-control mb-3" %>
      <%= f.submit "コメントする", class: "btn btn-secondary" %>
    <% end %>
  </div>
  <div class="col-3">
  </div>
</div>


<script>
function initMap(){
  var article_map = {lat: <%= @article.latitude %>, lng: <%= @article.longitude %>};
  let map = new google.maps.Map(document.getElementById('map'), {
  center: article_map,
  zoom: 8
  });

  var marker = new google.maps.Marker({
    positioin: article_map,
    map: map
  });
}
</script>
<script src="https://maps.googleapis.com/maps/api/js?key=<%= ENV['API_KEY'] %>&callback=initMap" async defer></script>
