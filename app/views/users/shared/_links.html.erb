<%- if controller_name != 'sessions' %>
  <%= link_to "#{t '.login'}", new_session_path(resource_name), class: "text-dark" %><br />
<% end %>

<%- if devise_mapping.registerable? && controller_name != 'registrations' %>
  <%= link_to "#{t '.signup'}", new_registration_path(resource_name), class: "text-dark" %><br />
<% end %>

<%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
  <%= link_to "#{t '.forget_password' }", new_password_path(resource_name), class: "text-dark" %><br />
<% end %>

<%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
  <%= link_to "#{t '.resend_confirmation_mail' }", new_confirmation_path(resource_name), class: "text-dark" %><br />
<% end %>

<%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
  <%= link_to "Didn't receive unlock instructions?", new_unlock_path(resource_name), class: "text-dark" %><br />
<% end %>

<%- if devise_mapping.omniauthable? %>
  <%= link_to user_google_oauth2_omniauth_authorize_path, class: "text-dark" do %>
    <div class="btn btn-block btn-primary mt-2 mb-2"><i class="fab fa-google"></i>　Googleアカウントでログイン</div>
  <% end %>
  <%= link_to user_google_oauth2_omniauth_authorize_path, class: "text-dark" do %>
    <div class="btn btn-block btn-info mt-2"><i class="fab fa-twitter"></i> Twitterアカウントでログイン</div>
  <% end %>
<% end %>
