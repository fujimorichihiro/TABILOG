<div class="row mt-3 d-flex justify-content-center">
  <div class="col-12 col-sm-8 p-5 mt-5">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>

      <div class="field">
        <%= f.text_field :name, autofocus: true, autocomplete: "name", class: "form-control mb-4 border-0", placeholder: "name" %>
      </div>

      <div class="field">
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control mb-4 border-0",placeholder: "Email" %>
      </div>

      <div class="field">
        <% if @minimum_password_length %>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "new-password", class: "form-control mb-2 border-0", placeholder: "Password(" + "#{ @minimum_password_length }" + "#{t '.characters'}" + ")" %>
      </div>

      <div class="field">
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control mb-2 border-0",placeholder: "#{t '.confirmation'}" %>
      </div>

      <div class="row actions mb-2">
        <%= f.submit "#{t '.registration'}", class: "btn btn-success mx-auto px-5"%>
      </div>
    <% end %>

    >><%= render "users/shared/links" %>
  </div>
</div>
