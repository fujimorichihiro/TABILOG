<!-- 記事一覧表示のテンプレート (each分の中身) -->
<div class="border border-light bg-light mb-3">
      <!-- 記事内容 -->
      <div class="row">
        <div class="col-1 pt-2 pr-1">
          <%= link_to user_path(article.user) do %>
            <%= attachment_image_tag article.user, :profile_image, :fill, 50, 50, class: "rounded-circle"%>
          <% end %>
        </div>
        <div class="col-11">
          <div class="row" style="height: 20px;"></div>
          <p class="text-secondary">@<%= article.user.name %></p>
          <%= link_to article_path(article), class: "text-secondary" do %>
            <%= article.title %>
          <% end %>
        </div>
      </div>
      <!-- 修正する -->
      <div class="row" style="height: 5px;"></div>

      <div class="row">
        <div class="col-1"></div>
        <div class="col-1">
          <button type="button" class="btn btn-link text-secondary" data-toggle="modal" data-target="#commentModal<%= article.id%>" data-whatever="@mdo">
            <i class="fas fa-comment"></i> <%= article.comments.count %>
          </button>
          <!---------------------------------- コメントmodal -------------------------------------------------->
          <div class="modal fade" id="commentModal<%= article.id%>" tabindex="-1" role="dialog" aria-labelledby="commentModalLabel" aria-hidden="true">
            <div class="modal-dialog" role="document">
              <div class="modal-content">
                <!-- modal header 投稿内容+コメント一覧-->
                <div class="modal-header">
                  <div class="row">
                    <div class="col-2">
                      <%= link_to user_path(article.user) do %>
                        <%= attachment_image_tag article.user, :profile_image, :fill, 50, 50, class: "rounded-circle"%>
                      <% end %>
                    </div>
                    <div class="col-10">
                      <p class="text-secondary">@<%= article.user.name %></p>
                      <%= article.title %>
                    </div>
                  </div>
                  <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                   <span aria-hidden="true">&times;</span>
                  </button>
                </div>
                <!-- modal body() -->
                <div class="modal-body">
                  <% article.comments.each do |comment| %>
                    <div class="row">
                      <div class="col-1">
                        <%= link_to user_path(comment.user) do %>
                          <%= attachment_image_tag comment.user, :profile_image, :fill, 30, 30, class: "rounded-circle"%>
                        <% end %>
                      </div>
                      <div class="col-11 pt-1">
                        <p class="text-secondary">@<%= comment.user.name %></p>
                        <%= comment.body %>
                      </div>
                    </div>
                    <div class="row">
                      <div class="col-8"></div>
                      <div class="col-4"><%= comment.created_at.to_s(:datetime_jp)%></div>
                    </div>
                  <% end %>

                  <%= form_for [article, comment] do |f| %>
                    <%= f.text_field :body, class: "form-control mb-3" %>
                    <%= f.submit "コメントする", class: "btn btn-secondary" %>
                  <% end %>
                </div>
                <!-- ---------- -->
              </div>
            </div>
          </div>
          <!---------------------------------------------- ---------- ---------------------------------------->
        </div>
        <div class="col-7 pt-2" id="favolite-<%= article.id %>">
          <%= render :partial => "articles/favolite", :locals => {:article => article} %>
        </div>
        <div class="col-3 pt-2">
          <p><%= article.created_at.to_s(:datetime_jp) %></p>
        </div>
      </div>
</div>
