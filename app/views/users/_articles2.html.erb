<div class="col-lg-6 col-md-12">
  <div class="row p-2">
    <div class="col-12">
      <!-- 記事の枠ここから -->
      <div class="row border border-secondary bg-light rounded">
        <div class="col-6 p-3">
          <div class="row">
            <div class="col-12">
              <%= link_to user_path(article.user) do %>
                <%= attachment_image_tag article.user, :profile_image, :fill, 50, 50, class: "rounded-circle"%>
              <% end %>
            </div>
          </div>
          <div class="row mt-2">
            <div class="col-11">
              <p class="text-secondary">@<%= article.user.name %></p>
              <%= link_to article_path(article), class: "text-info" do %>
                『 <%= article.title %> 』
              <% end %>
            </div>
          </div>
          <div class="row mt-2">
              <div class="col-3">
                <button type="button" class="btn btn-link text-secondary" data-toggle="modal" data-target="#commentModal<%= article.id%>" data-whatever="@mdo">
                  <i class="fas fa-comment"></i> <%= article.comments.count %>
                </button>
          <!---------------------------------- コメントmodal -------------------------------------------------->
                <div class="modal fade" id="commentModal<%= article.id%>" tabindex="-1" role="dialog" aria-labelledby="commentModalLabel" aria-hidden="true">
                  <div class="modal-dialog" role="document">
                    <div class="modal-content">
                <!-- modal header 投稿内容+コメント一覧-->
                      <div class="modal-header">
                        <div class="row">
                          <div class="col-2">
                            <%= link_to user_path(article.user) do %>
                              <%= attachment_image_tag article.user, :profile_image, :fill, 50, 50, class: "rounded-circle"%>
                            <% end %>
                          </div>
                          <div class="col-10">
                            <p class="text-secondary">@<%= article.user.name %></p>
                            <%= article.title %>
                          </div>
                        </div>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                         <span aria-hidden="true">&times;</span>
                        </button>
                      </div>
                      <!-- modal body() -->
                      <div class="modal-body">
                        <% article.comments.each do |comment| %>
                          <div class="row">
                            <div class="col-1">
                              <%= link_to user_path(comment.user) do %>
                                <%= attachment_image_tag comment.user, :profile_image, :fill, 30, 30, class: "rounded-circle"%>
                              <% end %>
                            </div>
                            <div class="col-11 pt-1">
                              <p class="text-secondary">@<%= comment.user.name %></p>
                              <%= comment.body %>
                            </div>
                          </div>
                          <div class="row">
                            <div class="col-8"></div>
                            <div class="col-4"><%= comment.created_at.to_s(:datetime_jp)%></div>
                          </div>
                        <% end %>
                      </div>
                      <!-- ---------- -->
                    </div>
                  </div>
                </div>
                <!---------------------------------------------- ---------- ---------------------------------------->
              </div>
              <div class="col-9 pt-2" id="favolite-<%= article.id %>">
                <% if user_signed_in? %>
                  <%= render :partial => "articles/favolite", :locals => {:article => article} %>
                <% else %>
                  <i class="fas fa-heart text-secondary"></i> <%= article.favolites.count %>
                <% end %>
              </div>
          </div>
          <div class="row">
            <div class="col-4"></div>
            <div class="col-8 pt-2">
              <p><%= article.created_at.to_s(:datetime_jp) %></p>
            </div>
          </div>
        </div>
        <div class="col-6">
          <%= attachment_image_tag article, :article_image, :fill, 250, 250 %>
        </div>
      </div>
    </div>
  </div>
</div>