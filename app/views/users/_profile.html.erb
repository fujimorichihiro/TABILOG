<!-- プロフィール画像 -->
<div class="row mt-3">
  <div class="col-2">
    <%= attachment_image_tag user, :profile_image, :fill, 130, 130, class: "rounded-circle" %>
  </div>
  <div class="col-10"></div>
</div>

<!-- ユーザーネーム、ボタン系 -->
<div class="row pt-2 pb-2">
  <div class="col-3">
    <h3><%= user.name %></h3>
  </div>
  <div class="col-5"></div>
  <!-- フォローボタン -->
  <div class="col-2" id="follow_button-<%= user.id %>">
    <%= render :partial => "users/follow_button", :locals => {:user => user} %>
  </div>
  <div class="col-2">
    <% if user == current_user %>
      <!-- 会員編集リンク -->
      <%= link_to edit_user_path(user) do %>
        <div class="btn btn-secondary rounded-circle"><i class="fas fa-cog"></i></div>
      <% end %>
    <% else %>
      <!-- DMリンク -->
      <%= link_to rooms_path(user_id: user.id), method: :post do %>
        <div class="btn btn-danger rounded-circle"><i class="fas fa-envelope text-white"></i></div>
      <% end %>
    <% end %>
  </div>
</div>

<!-- 自己紹介 -->
<div class="row mb-5">
  <%= user.introduction %>
</div>

<!-- bar -->
<div class="row mb-4">
  <div class="col-12" id="user_bar-<%= user.id %>">
    <%= render :partial => "users/navbar", :locals => {:user => user} %>
  </div>
</div>