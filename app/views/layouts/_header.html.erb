<header class="bg-dark pt-2 pb-2">
  <div class="container">
    <div class="row">
      <div class="col-3">
        <h3 class="text-white">TABILOG</h3>
      </div>
      <div class="col-3">
      </div>
      <div class="col-4">
        <!-- user側header -->
        <% if user_signed_in? %>
          <%= link_to root_path do %>
            <div class="btn btn-outline-warning"><i class="fas fa-home"></i></div>
          <% end%>
          <%= link_to articles_path do %>
            <div class="btn btn-outline-warning"><%= t '.timeline' %></div>
          <% end %>
          <%= link_to new_article_path do %>
            <div class="btn btn-success"><i class="fas fa-pen"></i></div>
          <% end %>
          <%= link_to destroy_user_session_path, method: :delete do %>
            <div class="btn btn-outline-warning"><%= t '.logout' %></div>
          <% end %>
        <!-- admin側header -->
        <% elsif admin_signed_in? %>
          <%= link_to admins_home_top_path do %>
            <div class="btn btn-outline-warning"><i class="fas fa-home"></i></div>
          <% end%>
          <%= link_to admins_users_path do %>
            <div class="btn btn-outline-warning">会員一覧</div>
          <% end %>
          <div class="btn btn-outline-danger">お問い合わせ</div>
          <%= link_to destroy_admin_session_path, method: :delete do %>
            <div class="btn btn-outline-warning">Log out</div>
          <% end %>
        <!-- 非会員header -->
        <% else %>
          <%= link_to root_path do %>
            <div class="btn btn-outline-warning"><i class="fas fa-home"></i></div>
          <% end%>
          <%= link_to new_user_session_path do %>
            <div class="btn btn-outline-warning">Log in</div>
          <% end %>
          <%= link_to new_user_registration_path do %>
            <div class="btn btn-outline-warning">Sign up</div>
          <% end %>
        <% end %>
      </div>
      <div class="col-2">
        <% if user_signed_in? %>
        <div class="dropdown">
            <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
              <%= current_user.name %>
            </button>
            <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
              <%= link_to "#{t '.mypage'}", user_path(current_user), class: "dropdown-item" %>
              <%= link_to "#{t '.message'}", rooms_path, class: "dropdown-item" %>
              <%= link_to "#{t '.favolite_article'}", favolite_user_path(current_user), class: "dropdown-item" %>
            </div>
          </div>
          <% end %>
      </div>
    </div>
  </div>
</header>

