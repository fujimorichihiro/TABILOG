<h1 class="text-danger">Articles#new</h1>
<p class="text-danger">記事投稿ページ</p>

<div class="row">
  <div class="col-1"></div>
  <div class="col-10">
    <%= form_for @article do |a| %>
      <div class="form-group">
        <%= a.text_field :title, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= a.text_area :body, 'data-provider': :summernote%>
      </div>
      <div class="btn-danger mb-2">tag select追加</div>
      <div class="btn-danger mb-2">image form追加</div>
      <div class="form-group">
        <p>サムネイル画像</p>
        <%= a.attachment_field :article_image %>
      </div>
      <%= a.submit "投稿する", class: "btn btn-secondary btn-block" %>
    <% end %>
  </div>
  <div class="col-1"></div>
</div>
