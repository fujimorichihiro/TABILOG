<div class="row mt-5">
  <div class="col-lg-2 col-md-1"></div>
  <div class="col-lg-8 col-md-10 p-5 mt-5 border border-secondary shadow-lg">
    <div class="">
      <h3 class="text-center mb-5"><%= t '.registration' %></h3>
    </div>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>

      <div class="field">
        <%= f.label :name, "#{t '.name'}" %><br />
        <%= f.text_field :name, autofocus: true, autocomplete: "name", class: "form-control mb-2" %>
      </div>

      <div class="field">
        <%= f.label :email, "#{t '.email'}"  %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control mb-2" %>
      </div>

      <div class="field">
        <%= f.label :password, "#{t '.password'}"  %>
        <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %><%= t '.characters' %>)</em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "new-password", class: "form-control mb-2" %>
      </div>

      <div class="field">
        <%= f.label :password_confirmation, "#{t '.confirmation'}"  %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control mb-2" %>
      </div>

      <div class="actions">
        <%= f.submit "#{t '.registration'}", class: "form-control btn btn-success"%>
      </div>
    <% end %>

    >><%= render "users/shared/links" %>
  </div>
  <div class="col-lg-2 col-md-1"></div>
</div>
