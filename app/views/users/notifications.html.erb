<div class="row mt-5">
  <div class="col-3"></div>
  <div class="col-8">
    <h2 class="border-bottom border-secondary"><%= t '.notification' %></h2>
  </div>
</div>
<!-- 通知一覧 -->
<div class="row">
  <div class="col-3">
    <div class="bg-dark rounded p-3">
      <h4 class="text-light">analyze</h4>
      <p class="text-light">いいね： <%= @notifications.number(0) %>件</p>
      <p class="text-light">コメント： <%= @notifications.number(1) %>件</p>
      <p class="text-light">ストック： <%= @notifications.number(3) %>件</p>
    </div>
  </div>
  <div class="col-8" id="notifications">
    <% @notifications.each do |notification| %>
      <%= render :partial => "users/notification", :locals => {:notification => notification} %>
    <% end %>
  </div>
  <div class="col-1"></div>
</div>
<div class="row mt-3">
  <div class="col-5"></div>
  <div class="col-7">
    <%= paginate @notifications %>
  </div>
</div>