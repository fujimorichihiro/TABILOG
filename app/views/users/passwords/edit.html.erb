<div class="row mt-5">
  <div class="col-2"></div>
  <div class="col-8 p-5 mt-5 border border-secondary">
    <div class="">
      <h3 class="text-center mb-5"><%= t '.change_password' %></h3>
    </div>
    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
      <%= render "users/shared/error_messages", resource: resource %>
      <%= f.hidden_field :reset_password_token %>

      <div class="field">
        <%= f.label :password, "#{t '.password'}" %><br />
        <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %><%= t '.characters' %>)</em><br />
        <% end %>
        <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class: "form-control mb-3" %>
      </div>

      <div class="field">
        <%= f.label :password_confirmation, "#{t '.password_confirmation'}" %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control mb-3" %>
      </div>

      <div class="actions">
        <%= f.submit "#{t '.button'}", class: "btn btn-warning btn-block mb-2" %>
      </div>
    <% end %>

    >><%= render "users/shared/links" %>
  </div>
  <div class="col-2"></div>
</div>
